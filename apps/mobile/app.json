{
  "expo": {
    "name": "K-12 Buddy",
    "slug": "k12buddy",
    "version": "0.1.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "k12buddy",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#4F46E5"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.k12buddy.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#4F46E5"
      },
      "package": "com.k12buddy.app"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow K-12 Buddy to access your camera to scan homework and textbook pages."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow K-12 Buddy to access your photos to upload homework images."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
