{
  "expo": {
    "name": "K12Buddy - AI Learning Tutor",
    "slug": "k-12buddy-ai",
    "owner": "guampaul",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "k12buddy",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#4F46E5"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.k12buddy.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "K12Buddy uses your camera to scan homework and textbook pages for AI tutoring.",
        "NSPhotoLibraryUsageDescription": "K12Buddy needs access to your photos to upload homework images.",
        "NSLocationWhenInUseUsageDescription": "K12Buddy uses your approximate location to personalize educational content.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#4F46E5"
      },
      "package": "com.k12buddy.app",
      "versionCode": 1,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.ACCESS_COARSE_LOCATION"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow K12Buddy to access your camera to scan homework and textbook pages."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow K12Buddy to access your photos to upload homework images."
        }
      ],
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Allow K12Buddy to use your approximate location to personalize educational content."
        }
      ],
      "expo-secure-store"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "8b69e05f-1459-40c5-ad8f-889edc550a81"
      }
    },
    "updates": {
      "url": "https://u.expo.dev/8b69e05f-1459-40c5-ad8f-889edc550a81"
    },
    "runtimeVersion": {
      "policy": "sdkVersion"
    }
  }
}
