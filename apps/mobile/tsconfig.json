{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@k12buddy/shared": ["../../packages/shared/src"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"],
  "exclude": [
    "node_modules",
    "e2e/**/*",
    "src/__tests__/**/*",
    "src/**/__tests__/**/*",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.e2e.ts"
  ]
}
